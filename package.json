{
  "name": "claudectl",
  "version": "1.0.1",
  "type": "module",
  "bin": {
    "claudectl": "./dist/claudectl",
    "ccl": "./dist/claudectl"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/claudectl",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:tui": "bun test src/**/*.tui.test.ts --timeout 30000",
    "test:report": "bun test 2>&1 | bun scripts/test-reporter.ts",
    "test:docker": "docker compose run --rm test",
    "test:docker:report": "docker compose run --rm test-report"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "@types/bcrypt": "^6.0.0",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "blessed": "^0.1.81",
    "commander": "^13.0.0",
    "node-pty": "^1.0.0",
    "picocolors": "^1.1.1",
    "web-push": "^3.6.7",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/bun": "latest",
    "@types/web-push": "^3.6.4",
    "typescript": "^5.7.2"
  }
}
