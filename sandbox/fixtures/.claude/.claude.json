{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-filesystem", "/sandbox"]
    },
    "demo-api": {
      "url": "http://localhost:3000/mcp"
    }
  },
  "projects": {
    "/sandbox/myproject": {
      "mcpServers": {
        "local-db": {
          "command": "npx",
          "args": ["-y", "mcp-server-sqlite", "/sandbox/myproject/data.db"]
        }
      }
    }
  }
}
